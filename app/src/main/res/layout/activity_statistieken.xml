<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_statistieken"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.jssgns.mtype1.Statistieken">

    <TextView
        android:text="Aantal metingen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMeasure"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="Gemiddelde (50):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="Gemiddelde (100):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGem50"
        android:layout_below="@+id/txtMeasure"
        android:layout_alignStart="@+id/txtMeasure"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="Binnen doelbereik: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGem100"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/txtGem50"
        android:layout_alignStart="@+id/txtGem50" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInTarget"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/txtGem100"
        android:layout_alignStart="@+id/txtGem100" />

</RelativeLayout>
